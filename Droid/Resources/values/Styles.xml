<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="Theme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
    	<item name="android:actionMenuTextColor">@color/secondary_color</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    	<item name="actionMenuTextColor">@color/secondary_color</item>
    </style>

	<!-- General -->
	<style name="MvxListViewParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">10dp</item>
	</style>
	<style name="MvxListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingBottom">60dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:clipToPadding">false</item>
	</style>
	
	 <!-- Toolbar Styles -->
    <style name="BottomToolbarButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Combat Tracker -->
    <style name="CombatItemContainer">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CombatItemStatTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="CombatItemStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="CombatItemHealthButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/darkred</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="CombatItemHealthMinusPlusButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/darkred</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="CombatFloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">75dp</item>
        <item name="android:elevation">8dp</item>
    </style>

	<!-- Add/Edit Combatant -->
    <style name="AddEditCombatantLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/options_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="AddEditCombatantLayoutMulti">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddEditCombatantLayoutMultiSub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/options_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="AddEditCombatantStatContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddEditCombatantTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="AddEditCombatantEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AddEditCombatantEditText.Stat">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

	<!-- Options Menu -->
    <style name="OptionsSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/options_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="OptionRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="OptionRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/primary_color</item>
    </style>
	
	<!-- Help -->
    <style name="HelpSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/options_background</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="HelpTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="HelpTextView.Title">
		<item name="android:textStyle">bold</item>
    </style>
    <style name="HelpTextView.TopTitle">
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
    </style>
    <style name="HelpTextView.MultiLine">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="HelpTextView.Hyperlink">
        <item name="android:textColor">@color/darkred</item>
    </style>

	<!-- Random Section -->
	<style name="RandomFilterButton">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/random_filter_button</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:singleLine">false</item>
        <item name="android:elevation">2dp</item>
	</style>

	<!-- Random Item -->
	<style name="RandomItemContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RandomItemStatTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="RandomItemStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>
	
</resources>