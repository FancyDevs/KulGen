<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <include
            layout="@layout/top_toolbar" />
        <LinearLayout
            style="@style/AddEditCombatantLayout">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:id="@+id/edit_text_character_name" />
            <EditText
                style="@style/AddEditCombatantEditText"
                android:id="@+id/edit_character_name"
                android:inputType="textCapSentences" />
        </LinearLayout>
        <LinearLayout
            style="@style/AddEditCombatantLayoutMulti">
            <LinearLayout
                style="@style/AddEditCombatantLayoutMultiSub"
                android:layout_weight="1">
                <TextView
                    style="@style/AddEditCombatantTextView"
                    android:id="@+id/edit_text_initiative" />
                <EditText
                    style="@style/AddEditCombatantEditText.Stat"
                    android:id="@+id/edit_initiative" />
            </LinearLayout>
            <LinearLayout
                style="@style/AddEditCombatantLayoutMultiSub"
                android:layout_weight="1">
                <TextView
                    style="@style/AddEditCombatantTextView"
                    android:id="@+id/edit_text_max_health" />
                <EditText
                    style="@style/AddEditCombatantEditText.Stat"
                    android:id="@+id/edit_max_health"
                    android:maxLength="4" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/AddEditCombatantLayoutMulti">
            <LinearLayout
                style="@style/AddEditCombatantLayoutMultiSub"
                android:layout_weight="1">
                <TextView
                    style="@style/AddEditCombatantTextView"
                    android:id="@+id/edit_text_perception" />
                <EditText
                    style="@style/AddEditCombatantEditText.Stat"
                    android:id="@+id/edit_perception" />
            </LinearLayout>
            <LinearLayout
                style="@style/AddEditCombatantLayoutMultiSub"
                android:layout_weight="1">
                <TextView
                    style="@style/AddEditCombatantTextView"
                    android:id="@+id/edit_text_armor" />
                <EditText
                    style="@style/AddEditCombatantEditText.Stat"
                    android:id="@+id/edit_armor" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/AddEditCombatantLayout"
            android:id="@+id/layout_edit_player_name">
            <TextView
                style="@style/AddEditCombatantTextView"
                android:id="@+id/edit_text_player_name" />
            <EditText
                style="@style/AddEditCombatantEditText"
                android:id="@+id/edit_player_name"
                android:inputType="textCapSentences" />
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/bottom_toolbar" />
</RelativeLayout>